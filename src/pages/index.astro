---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { dateRange } from "@lib/utils";
import { SITE, HOME } from "@consts";

import tools from "@data/svgs.json";
import ContactSection from "@components/ContactSection.astro";
import StackCard from "@components/StackCard.astro";

const projects = (await getCollection("projects"))
  .filter(project => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_PROJECTS_ON_HOMEPAGE);

const allwork = (await getCollection("work"))
  .sort(
    (a, b) =>
      new Date(b.data.dateStart).valueOf() -
      new Date(a.data.dateStart).valueOf()
  )
  .slice(0, SITE.NUM_WORKS_ON_HOMEPAGE);

const work = await Promise.all(
  allwork.map(async item => {
    const { Content } = await item.render();
    return { ...item, Content };
  })
);

// Group work experiences by company
const groupedWork = work.reduce<Record<string, (typeof work)[number][]>>(
  (acc, entry) => {
    const company = entry.data.company;
    if (!acc[company]) {
      acc[company] = [];
    }
    acc[company].push(entry);
    return acc;
  },
  {}
);

const dailyTools = tools.filter(tool => tool.daily).slice(0, 10);
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <div class="flex items-center space-x-3">
      <Image
        width={64}
        height={64}
        src="/kelechi.jpeg"
        alt="Kelechi Odom"
        class="w-14 h-14 rounded-full animate object-cover"
        loading="eager"
      />
      <div class="space-y-0">
        <h4 class="font-semibold text-black dark:text-white">
          Hi, I'm Kelechi <span class="text-xl">👋🏽</span>
        </h4>
        <p class="text-opacity-55 text-sm">Product Engineer</p>
      </div>
    </div>
    <div class="space-y-16">
      <section>
        <article class="space-y-4">
          <p class="animate">
            I am a fullstack software engineer from 🇳🇬 Nigeria, currently based
            in 🇬🇧 London. With a passion for engineering, product and
            craftsmanship. I enjoy building out polished digital products people
            love.
          </p>
          <p class="animate">
            Outside programming, my interests include but are not lmited to
            startups, football, gaming, music and anime
          </p>
        </article>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            Work Experience
          </h5>
          <Link href="/work" className="text-[15px]"> See all work </Link>
        </div>
        <ul class="flex flex-col space-y-6">
          {
            Object.entries(groupedWork).map(([company, entries]) => (
              <li class="animate group">
                {entries[0].data.website && (
                  <Link
                    className="flex items-center space-x-2 font-semibold text-black text-[15px] dark:text-white no-underline hover:underline font-serif"
                    href={entries[0].data.website}
                    external
                  >
                    <span>{company}</span>
                    <svg
                      width="12"
                      height="12"
                      viewBox="0 0 12 12"
                      fill="currentColor"
                      class="stroke-2"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path d="M3.5 3C3.22386 3 3 3.22386 3 3.5C3 3.77614 3.22386 4 3.5 4V3ZM8.5 3.5H9C9 3.22386 8.77614 3 8.5 3V3.5ZM8 8.5C8 8.77614 8.22386 9 8.5 9C8.77614 9 9 8.77614 9 8.5H8ZM2.64645 8.64645C2.45118 8.84171 2.45118 9.15829 2.64645 9.35355C2.84171 9.54882 3.15829 9.54882 3.35355 9.35355L2.64645 8.64645ZM3.5 4H8.5V3H3.5V4ZM8 3.5V8.5H9V3.5H8ZM8.14645 3.14645L2.64645 8.64645L3.35355 9.35355L8.85355 3.85355L8.14645 3.14645Z" />
                    </svg>

                    <span class="sr-only">Visit {company}</span>
                  </Link>
                )}

                <ul class="flex flex-col space-y-6 pb-2">
                  {entries.map(entry => (
                    <li>
                      <div class="flex justify-between items-end pt-1 pb-1.5 space-y-1">
                        <p class="text-sm scale-105">{entry.data.role}</p>
                        <p class="text-sm">
                          {dateRange(entry.data.dateStart, entry.data.dateEnd)}
                        </p>
                      </div>
                      {entry.data.description && (
                        <article class="py-1">{entry.data.description}</article>
                      )}
                    </li>
                  ))}
                </ul>
              </li>
            ))
          }
        </ul>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            Recent projects
          </h5>
          <Link href="/projects" className="text-[15px]">
            See all projects
          </Link>
        </div>
        <ul class="flex flex-col gap-4">
          {
            projects.map(project => (
              <li>
                <ArrowCard entry={project} />
              </li>
            ))
          }
        </ul>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-col space-y-2">
          <div class="flex flex-wrap gap-y-3 items-center justify-between">
            <h5 class="font-semibold text-black dark:text-white">Stack</h5>
            <!-- <Link href="/tools"> See all tools </Link> -->
          </div>
          <p class="text-opacity-60 text-sm">
            Tools I use daily to get things done.
          </p>
        </div>
        <ul class="grid grid-cols-2 md:grid-cols-2 gap-x-8 gap-y-5">
          {
            dailyTools.map(tool => (
              <li>
                <StackCard tool={tool} />
              </li>
            ))
          }
        </ul>
      </section>

      <ContactSection />
    </div>
  </Container>
</PageLayout>
